{
	"IAMGroup": {
		"Type": "AWS::IAM::Group",
		"Properties": {
			"GroupName": "private_drive",
			"Policies": [
				{
					"PolicyName": "drive_access",
					"PolicyDocument" : {
						"Version": "2012-10-17",
						"Statement": [
							{
								"Effect": "Allow",
								"Action": [
									"s3:PutObject",
									"s3:GetObjectAcl",
									"s3:GetObject",
									"s3:PutObjectVersionAcl",
									"s3:GetObjectVersionAcl",
									"s3:ListBucket",
									"s3:DeleteObject",
									"s3:PutObjectAcl"
								],
								"Resource": [
									{ "Fn::Sub": "arn:aws:s3:::${S3Drive}" },
									{ "Fn::Sub": "arn:aws:s3:::${S3Drive}/*" }
								]
							},
							{
								"Effect": "Allow",
								"Action": "s3:ListAllMyBuckets",
								"Resource": "*"
							}
						]
					}
				}
			]
		}
	}
}